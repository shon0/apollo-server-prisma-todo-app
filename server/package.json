{
  "name": "server",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "fix:eslint": "eslint --fix 'src/**/*.{js,ts}'",
    "fix:prettier": "prettier --write 'src/**/*.{js,jsx,ts,tsx}' --loglevel error",
    "lint": "yarn fix:eslint && yarn fix:prettier",
    "codegen": "graphql-codegen --config codegen.yml && yarn fix"
  },
  "dependencies": {
    "@graphql-tools/graphql-file-loader": "7.3.2",
    "@graphql-tools/load": "7.4.1",
    "@graphql-tools/schema": "8.3.1",
    "@prisma/client": "3.4.1",
    "apollo-server": "3.5.0",
    "graphql": "16.0.1",
    "prisma": "3.4.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.2.2",
    "@graphql-codegen/typescript": "2.3.1",
    "@graphql-codegen/typescript-resolvers": "2.4.0",
    "@types/node": "16.11.6",
    "@typescript-eslint/eslint-plugin": "5.4.0",
    "@typescript-eslint/parser": "5.4.0",
    "eslint-config-prettier": "8.3.0",
    "ts-node": "10.4.0",
    "ts-node-dev": "1.1.8",
    "typescript": "4.4.4"
  }
}
